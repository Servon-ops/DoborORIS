
@using System.Globalization;
@using WEBORIS.CONSTANTS;
@using WEBORIS.ViewModels;
@model List<NewsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
        <section class="first-section">
            <div class="first-block">
                <div class="first-block-img-container">
                    <img class="first-block-left img-scale" src="@Model[0].ImagePath"/>
                </div>
                <h1>
                    @Model[0].Title
                </h1>
                <ul class="first-block-status">
                    <li class="first-block-status-element">
                    By <a class="author">@Model[0].Author</a> . 
                    </li>
                    <li class="first-block-status-element">
                    <a>
                        @Model[0].Date
                    </a>
                    </li>
                    <li class="first-block-status-element">
                        <a>
                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M64 64c0-17.7-14.3-32-32-32S0 46.3 0 64V400c0 44.2 35.8 80 80 80H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H80c-8.8 0-16-7.2-16-16V64zm406.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L320 210.7l-57.4-57.4c-12.5-12.5-32.8-12.5-45.3 0l-112 112c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L240 221.3l57.4 57.4c12.5 12.5 32.8 12.5 45.3 0l128-128z" /></svg>
                        </a>
                    </li>
                    <li class="first-block-status-element">
                        <a>@Model[0].ViewsString</a>
                    </li>
                    <li class="first-block-status-element">
                        <a>
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M352 224c53 0 96-43 96-96s-43-96-96-96s-96 43-96 96c0 4 .2 8 .7 11.9l-94.1 47C145.4 170.2 121.9 160 96 160c-53 0-96 43-96 96s43 96 96 96c25.9 0 49.4-10.2 66.6-26.9l94.1 47c-.5 3.9-.7 7.8-.7 11.9c0 53 43 96 96 96s96-43 96-96s-43-96-96-96c-25.9 0-49.4 10.2-66.6 26.9l-94.1-47c.5-3.9 .7-7.8 .7-11.9s-.2-8-.7-11.9l94.1-47C302.6 213.8 326.1 224 352 224z" /></svg>
                        </a>
                    </li>
                    <li class="first-block-status-element">
                        <a>Shares</a>
                    </li>
                </ul>
            </div>
            <div class="second-block">
                <div class="second-block-up">
                    <h1>Recent News</h1>
                    <h2>ALL RECENT NEWS</h2>
                </div>
                <ul class="second-block-list">
                @foreach (var e in Model.Skip(1))
                {
                    <li class="second-block-element">
                        <div class="second-block-img-container">
                            <img class="img-scale"  src=@e.ImagePath />
                        </div>
                        <ul class="second-block-element-list">
                            <li class="second-block-element-element">
                                <a class="type-news" style="background-color: @Constants.MONTHS[@e.Category]">
                                    @e.Category
                                </a>
                            </li>
                            <li class="second-block-element-element">
                                <h2>
                                    @e.Title
                                </h2>
                            </li>
                            <li>
                                <ul class="first-block-status">
                                    <li class="first-block-status-element">
                                        By <a class="author">@e.Author</a> .
                                    </li>
                                    <li class="first-block-status-element">
                                        <a>
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M64 64c0-17.7-14.3-32-32-32S0 46.3 0 64V400c0 44.2 35.8 80 80 80H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H80c-8.8 0-16-7.2-16-16V64zm406.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L320 210.7l-57.4-57.4c-12.5-12.5-32.8-12.5-45.3 0l-112 112c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L240 221.3l57.4 57.4c12.5 12.5 32.8 12.5 45.3 0l128-128z" /></svg>
                                        </a>
                                    </li>
                                    <li class="first-block-status-element">
                                        <a>@e.ViewsString</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                }
                </ul>
            </div>
        </section>
</div>
